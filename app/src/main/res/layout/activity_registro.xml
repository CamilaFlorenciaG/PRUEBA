<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="522dp"

        android:background="@drawable/roundstyle"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="8pt">

        <ImageView
            android:id="@+id/reLogo"
            android:layout_width="47pt"
            android:layout_height="40pt"

            android:layout_gravity="center"
            android:background="@drawable/loguito" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/reNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"

                android:background="@drawable/roundstyle"
                android:backgroundTint="#BFC6CC"
                android:hint="Nombre"
                android:inputType="text"
                android:padding="15dp" />

            <EditText
                android:id="@+id/reApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"

                android:background="@drawable/roundstyle"
                android:backgroundTint="#BFC6CC"
                android:hint="Apellidos"
                android:inputType="text"
                android:padding="15dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/reEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="10dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#BFC6CC"

            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp" />

        <EditText
            android:id="@+id/reContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#BFC6CC"

            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="15dp" />

        <Button
            android:id="@+id/reRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#664434"
            android:text="Registrarse" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <CheckBox
                android:id="@+id/reAceptar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="20dp"
                android:text="Acepto los términos y condiciones"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5pt"
                android:background="@color/white"
                android:text="Leer condiciones de servicio y política de privacidad de Patitas."
                android:textAlignment="center"
                android:textColor="#757575"

                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>